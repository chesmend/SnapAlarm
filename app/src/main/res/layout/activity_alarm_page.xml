<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AlarmPage">

    <CheckBox
        android:id="@+id/item05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="88dp"
        android:buttonTint="@color/white"
        android:text="@string/item05"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEdit" />

    <CheckBox
        android:id="@+id/item06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:buttonTint="@color/white"
        android:text="@string/item06"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item05" />

    <CheckBox
        android:id="@+id/item07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:buttonTint="@color/white"
        android:text="@string/item07"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item06" />

    <CheckBox
        android:id="@+id/item08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:buttonTint="@color/white"
        android:text="@string/item08"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item07" />

    <CheckBox
        android:id="@+id/item09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="89dp"
        android:buttonTint="@color/white"
        android:text="@string/item09"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item08" />

    <Spinner
        android:id="@+id/hourSpin"
        android:layout_width="87dp"
        android:layout_height="85dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:background="@color/light_grey"
        android:backgroundTintMode="add"
        android:dropDownWidth="80dp"
        android:dropDownSelector="@color/light_grey"
        android:popupElevation="20sp"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/minSpin"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_width="87dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@color/light_grey"
        android:dropDownSelector="@color/light_grey"
        android:popupElevation="20sp"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/hourSpin"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/ampmSpin"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:background="@color/light_grey"
        android:dropDownSelector="@color/light_grey"
        android:popupElevation="20sp"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/minSpin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/colon"
        android:layout_width="36dp"
        android:layout_height="62dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="48dp"
        android:text="@string/colon"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/satButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/color_toggle"
        android:text="@string/sat"
        android:textColor="@color/white"
        android:textOff="@string/sat"
        android:textOn="@string/sat"
        app:layout_constraintStart_toEndOf="@+id/friButt"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/friButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/color_toggle"
        android:text="@string/fri"
        android:textColor="@color/white"
        android:textOff="@string/fri"
        android:textOn="@string/fri"
        app:layout_constraintStart_toEndOf="@+id/thuButt"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/thuButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/color_toggle"
        android:text="@string/thu"
        android:textColor="@color/white"
        android:textOff="@string/thu"
        android:textOn="@string/thu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/wedButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/color_toggle"
        android:text="@string/wed"
        android:textColor="@color/white"
        android:textOff="@string/wed"
        android:textOn="@string/wed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tueButt"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tueButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/color_toggle"
        android:text="@string/tue"
        android:textColor="@color/white"
        android:textOff="@string/tue"
        android:textOn="@string/tue"
        app:layout_constraintStart_toEndOf="@+id/monButt"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/monButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/color_toggle"
        android:text="@string/mon"
        android:textColor="@color/white"
        android:textOff="@string/mon"
        android:textOn="@string/mon"
        app:layout_constraintStart_toEndOf="@+id/sunButt"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/sunButt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/color_toggle"
        android:text="@string/sun"
        android:textColor="@color/white"
        android:textOff="@string/sun"
        android:textOn="@string/sun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="297dp"
        android:layout_height="47dp"
        android:layout_marginTop="288dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/item01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:buttonTint="@color/white"
        android:text="@string/item01"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item00" />

    <CheckBox
        android:id="@+id/item03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:buttonTint="@color/white"
        android:text="@string/item03"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item02" />

    <CheckBox
        android:id="@+id/item00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/white"
        android:text="@string/item00"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEdit"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/item02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:buttonTint="@color/white"
        android:text="@string/item02"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item01" />

    <CheckBox
        android:id="@+id/item04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:buttonTint="@color/white"
        android:text="@string/item04"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item03" />


</android.support.constraint.ConstraintLayout>